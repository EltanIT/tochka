<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration_activity">
    <ImageButton
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/exit_button"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:onClick="BackToRegistrate"
        tools:ignore="OnClick" />
    <TextView
        android:id="@+id/HelloUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:paddingTop="100dp"
        android:text="Привет!"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="38sp"
        android:fontFamily="@font/geometria"
        />
    <TextView
        android:id="@+id/TellAboutYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/HelloUserText"
        android:text="Расскажи о себе:"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:fontFamily="@font/geometriamedium"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Name"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TellAboutYou"
        android:paddingLeft="15dp"
        android:background="@drawable/frames"
        android:fontFamily="@font/helvetica"
        android:hint="Имя*"
        android:textSize="16sp"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Surname"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Name"
        android:paddingLeft="15dp"
        android:background="@drawable/frames"
        android:fontFamily="@font/helvetica"
        android:hint="Фамилия*"
        android:textSize="16sp"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Email"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Surname"
        android:paddingLeft="15dp"
        android:background="@drawable/frames"
        android:fontFamily="@font/helvetica"
        android:hint="E-mail*"
        android:textSize="16sp"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/NumberPhone"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Email"
        android:paddingLeft="15dp"
        android:background="@drawable/frames"
        android:fontFamily="@font/helvetica"
        android:hint="Номер телефона"
        android:textSize="16sp"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Password"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NumberPhone"
        android:paddingLeft="15dp"
        android:background="@drawable/frames"
        android:fontFamily="@font/helvetica"
        android:hint="Пароль*"
        android:textSize="16sp"
        android:inputType="textPassword"

        />
    <TextView
        android:id="@+id/necessarily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:paddingStart="36dp"
        android:text="*-данные обязательны для заполения"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Continue"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:text="Продолжить"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/maincolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/necessarily"
        android:background="@drawable/corner_button_registration"
        android:stateListAnimator="@null"
        android:onClick="Continue"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterActivity">

    <TextView
        android:id="@+id/EnterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Вход"
        android:textSize="34sp"
        android:fontFamily="@font/geometriamedium"
        android:textColor="@color/black"
        android:textAllCaps="false"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/EdTxtMail"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterText"
        android:hint="E-Mail"
        android:background="@drawable/frames"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_marginTop="30dp"
        android:id="@+id/EdTxtPassword"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EdTxtMail"
        android:hint="Пароль"
        android:background="@drawable/frames"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/EnterButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EdTxtPassword"
        android:textColor="@color/white"
        android:text="Войти"
        android:textAllCaps="false"
        android:background="@drawable/button_scroll1"
        android:stateListAnimator="@null"
        android:onClick="StartToHomePage"
        />
    <TextView
        android:id="@+id/Problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Проблемы со входом?"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/EnterButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>